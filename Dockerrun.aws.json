{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "web",
      "host": {
        "sourcePath": "/var/app/current/web"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "www",
      "image": "markhumphrey/www-mark-humphrey-dot-io",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links" : [
        "api"
      ]
    },
    {
      "name": "api",
      "image": "markhumphrey/api-mark-humphrey-dot-io",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "links" : [
        "sql"
      ]
    },
    {
      "name": "sql",
      "image": "markhumphrey/sql-mark-humphrey-dot-io",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ],
      "environment": [
        {
          "name": "MYSQL_DATABASE",
          "value": "database"
        },
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "admin123"
        }
      ]
    }
  ]
}
